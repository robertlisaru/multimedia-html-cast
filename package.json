{
  "name": "multimedia-html-cast",
  "version": "1.0.0",
  "description": "Use your smart tv web browser to view (cast) local multimedia files from your PC in a html web page served locally (LAN). Useful when other cast methods are not available.",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "webpack --mode=production --config webpack.config.production.js",
    "watch": "webpack -w --mode=development --config webpack.config.js",
    "scan": "cd dist && directory-tree --path ./ --attributes type,extension --pretty -o ./media.json",
    "start": "node server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robertlisaru/multimedia-html-cast.git"
  },
  "keywords": [
    "multimedia",
    "html",
    "cast"
  ],
  "author": "Robert Lisaru",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/robertlisaru/multimedia-html-cast/issues"
  },
  "homepage": "https://github.com/robertlisaru/multimedia-html-cast#readme",
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-react": "^7.22.5",
    "babel-loader": "^9.1.3",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.8.1",
    "directory-tree": "^3.5.2",
    "express": "^4.18.2",
    "html-webpack-plugin": "^5.5.3",
    "style-loader": "^3.3.3",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "franc": "^6.2.0",
    "iso-639-3-to-1": "^1.0.0",
    "iso-639-language": "^1.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.3.0"
  }
}
